/* pages/components/bar/bar.wxss */

@font-face {
  font-family: 'icomoon';
  src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
  font-weight: normal;
  font-style: normal;
}

.icon-music, .icon-play, .icon-user, .icon-spinner4 {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'icomoon' !important;
  speak-as: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-music:before {
  content: "\e911";
}

.icon-play:before {
  content: "\e912";
}

.icon-user:before {
  content: "\e971";
}

.icon-spinner4:before {
  content: "\e97d";
}

.footer {
  width: 100%;
  height: 100rpx;
  background-color: rgb(32, 32, 32);
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  overflow: hidden;
  z-index: 2000;
}
.footer_link {
  padding: 20rpx 0 10rpx 0;
  float: left;
  width: 25%;
  color: rgba(228, 222, 222, 0.6);
  box-sizing: border-box;
}
.link_i {
  width: 60rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 0 auto 10rpx;
}
.bar_name {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
}
