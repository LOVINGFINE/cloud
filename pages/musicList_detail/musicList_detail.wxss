/* pages/musicList_detail/musicList_detail.wxss */

.top {
  width: 100%;
  height: 285rpx;
  padding: 20rpx 3%;
  box-sizing: border-box;
}

.top_img {
  width: 40%;
  border-radius: 4px;
  float: left;
}

.topPlay {
}

.top_message {
  width: 52%;
  float: right;
}

.top_name {
  width: 100%;
  font-size: 28rpx;
  color: #fff;
  line-height: 40rpx;
  /* 两行显示溢出隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.top_nickname {
  color: rgb(223, 222, 222);
  font-size: 24rpx;
  line-height: 45rpx;
  margin: 10rpx 0;
}
.nickImg {
  float: left;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}

.top_tag {
  margin-top: 50rpx;
  color: rgba(201, 201, 201, 0.6);
  font-size: 24rpx;
  display: block;
  width: 100%;
  /* 两行显示溢出隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.main {
  width: 100%;
  background-color: rgba(44, 43, 43,0.8);
  border-radius: 10px 10rpx 0 0;
  margin-top: 50rpx;
}
.musicList_method {
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #000;
  box-sizing: border-box;
}
.playAllSongs {
  float: left;
  line-height: 90rpx;
  font-size: 34rpx;
  color: rgba(190, 190, 190, 0.6);
  padding: 0 20rpx;
  margin-left: 10rpx;
}
.musicList_m {
  float: left;
  line-height: 90rpx;
  font-size: 32rpx;
  color: rgb(199, 197, 197);
}
.number {
  font-size: 24rpx;
  color: #666;
}
.body {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.songLink {
  margin: 20rpx 0;
  width: 100%;
  height: 80rpx;
  color: rgb(179, 178, 178);
}

.num {
  float: left;
  line-height: 80rpx;
  width: 50rpx;
  font-size: 28rpx;
  text-align: center;
  color: #666;
  margin-right: 20rpx;
}

.item_mess {
  float: left;
  width: 75%;
  height: 100%;
}

.name {
  display: block;
  width: 100%;
  height: 50%;
  line-height: 40rpx;
  font-size: 28rpx;
  
  /* 单行溢出隐藏 */
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.nameAl {
  color: #666;
}
.nickname {
  font-size: 22rpx;
  color: #666;
}
